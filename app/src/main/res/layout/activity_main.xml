<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/udacity"
        android:src="@drawable/udacitymind"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/imagine_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="16dp"
        android:textSize="36sp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_dark"
        android:text="Imagine Your Future" />

    <TextView
        android:id="@+id/number_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:paddingRight="8sp"
        android:paddingBottom="8sp"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold"
        android:text="650-555-5555"/>

    <TextView
        android:id="@+id/city_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/number_text_view"
        android:layout_alignParentRight="true"
        android:paddingRight="8sp"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold"
        android:text="Mountain View,CA 94043"/>

    <TextView
        android:id="@+id/addr_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/city_text_view"
        android:layout_alignParentRight="true"
        android:paddingRight="8sp"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold"
        android:text="2465 Latham St."/>

</RelativeLayout>

